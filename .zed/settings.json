{
  "formatter": "language_server",
  "format_on_save": "on",
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": true,
        "check": {
          "command": "clippy",
          "extraArgs": [
            "--all-features",
            "--",
            "-D",
            "warnings"
          ]
        },
        "rustfmt": {
          "extraArgs": [
            "+nightly"
          ]
        }
      }
    }
  }
}
